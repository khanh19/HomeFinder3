<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.homefinder2.View.AddPropertyActivity">

    <ImageView
        android:id="@+id/add_pho"
        android:layout_width="413dp"
        android:layout_height="131dp"
        android:src="@drawable/ic_add_a_photo" />
    <EditText
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addpho_btn"
        android:hint="Price"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/script"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cost" 
        android:hint="Description"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/addy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/script"
        android:hint="Address"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/addprop_btn"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/addy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#F34F7BBC"
        android:text="Add Property"
        />
    <Button
        android:id="@+id/addpho_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/add_pho"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#F34F7BBC"
        android:text="Add Photo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
